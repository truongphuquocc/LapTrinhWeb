@model _19T1021201.Web.Models.ShipperSearchOutput
@{ 
    Layout = null;
}
<p>Có <strong>@string.Format("{0:N0}", Model.RowCount)</strong> người giao hàng trong tổng số <strong>@String.Format("{0:N0}", Model.PageCount)</strong> trang</p>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr class="bg-primary">
            <th>
                Tên người giao hàng
            <th>
                Số điện thoại
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @item.ShipperName
                </td>
                <td>
                    @item.Phone
                </td>

                <td class="text-center">
                    <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-info">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                    <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }
    </ul>
</div>

