@model IEnumerable<_19T1021201.DomainModels.Shipper>
@{
    ViewBag.Title = "Quản lý người giao hàng";
}

<div class="box box-primary">
    <div class="box-body">

        <form>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search" value="@ViewBag.SearchValue">
                <div class="input-group-btn">
                    <button class="btn btn-success" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
                <div class="input-group-btn">
                    <a href="~/Shipper/Create" class="btn btn-primary" style="margin-left: 5px;">
                        <i class="glyphicon glyphicon-plus"></i>
                        bổ sung
                    </a>
                </div>
            </div>

        </form>


        <p>Có <b>@ViewBag.RowCount</b> người giao hàng trong tổng số <b>@ViewBag.PageCount</b> trang</p>

        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-primary">
                    <th>
                        Tên người giao hàng
                    <th>
                        Số điện thoại
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.ShipperName
                        </td>
                        <td>
                            @item.Phone
                        </td>

                        <td class="text-center">
                            <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-info">
                                <i class="glyphicon glyphicon-edit"></i>
                            </a>
                            <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-danger">
                                <i class="glyphicon glyphicon-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-center">
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.PageCount; i++)
                {
                    if (i == ViewBag.Page)
                    {
                        <li class="active"><a href="#">@i</a></li>
                    }
                    else
                    {
                        <li><a href="~/Shipper?page=@i&searchvalue=@ViewBag.SearchValue">@i</a></li>
                    }
                }
            </ul>
        </div>
    </div>
</div>


