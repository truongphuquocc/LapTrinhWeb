
@{
    ViewBag.Title = "Quản lý người giao hàng";
}

<div class="box box-primary">
    <div class="box-body">

        <form>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search">
                <div class="input-group-btn">
                    <button class="btn btn-success" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
                <div class="input-group-btn">
                    <a href="~/Shipper/Create" class="btn btn-primary" style="margin-left: 5px;">
                        <i class="glyphicon glyphicon-plus"></i>
                        bổ sung
                    </a>
                </div>
            </div>

        </form>


        <p>Có <b>1,054</b>người giao hàng trong tổng số <b>10</b> trang</p>

        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-primary">
                    <th>
                        Tên người giao hàng
                    <th>
                        Số điện thoại
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 1; i <= 10; i++)
                {
                    <tr>
                        <td>
                            Trương Phú Quốc
                        </td>
                        <td>
                            03658863
                        </td>

                        <td class="text-center">
                            <a href="~/Shipper/Edit" class="btn btn-info">
                                <i class="glyphicon glyphicon-edit"></i>
                            </a>
                            <a href="~/Shipper/Delete" class="btn btn-danger">
                                <i class="glyphicon glyphicon-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-center">
            <ul class="pagination">
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            </ul>
        </div>
    </div>
</div>


