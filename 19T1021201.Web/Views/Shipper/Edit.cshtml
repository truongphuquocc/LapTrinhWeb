@model _19T1021201.DomainModels.Shipper
@{

}

<div class="box box-primary">
    <div class="box-body">
        <div class="container">
            <form action="~/Shipper/Save" method="post">
                <input type="hidden" name="ShipperID" value="@Model.ShipperID" />
                <div class="form-group">
                    <label>Tên người giao hàng:</label>
                    <input type="text" class="form-control" id="ShipperName" name="ShipperName" value="@Model.ShipperName" autofocus>
                </div>

                <div class="form-group">
                    <label>Số điện thoại:</label>
                    <input type="text" class="form-control" id="Phone" name="Phone" value="@Model.Phone">
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary"> <i class="glyphicon glyphicon-floppy-disk"></i> Lưu dữ liệu</button>
                        <a href="~/Shipper" class="btn btn-warning">Quay lại</a>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

