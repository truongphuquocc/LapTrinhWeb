@model _19T1021201.DomainModels.Shipper
@{

}

<div class="box box-primary">
    <div class="box-body">
        <div class="container">
            <form action="~/Shipper/Save" method="post">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ShipperID)
                <div class="form-group">
                    <label>Tên người giao hàng:</label>
                    @Html.TextBoxFor(m => m.ShipperName, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.ShipperName, "", new { @style = "color:#FF0000" })
                </div>

                <div class="form-group">
                    <label>Số điện thoại:</label>
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary"> <i class="glyphicon glyphicon-floppy-disk"></i> Lưu dữ liệu</button>
                        <a href="~/Shipper" class="btn btn-warning">Quay lại</a>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

