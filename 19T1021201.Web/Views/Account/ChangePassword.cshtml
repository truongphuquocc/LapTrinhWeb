@{
    ViewBag.Title = "Thay đổi mật khẩu";
}
<div class="container-fluid box box-primary">
    <div class="box-header">
    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/Account/ChangePassword" method="post">
            @{ var userAccount = Converter.CookieToUserAccount(User.Identity.Name); }



            <div class="form-group">
                <label class="control-label col-sm-2">Mật khẩu cũ:</label>
                <div class="col-sm-10">
                    <input type="password" value="@ViewBag.oldPassword" class="form-control" name="oldPassword" autofocus="">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mật khẩu mới:</label>
                <div class="col-sm-10">
                    <input type="password" value="@ViewBag.newPassword" class="form-control" name="newPassword">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Xác nhận mật khẩu:</label>
                <div class="col-sm-10">
                    <input type="password" value="@ViewBag.confirmPassword" class="form-control" name="confirmPassword">
                </div>
            </div>
            <div class="form-group">
                <p class="col-sm-offset-2 col-sm-10" style="color:red">@ViewBag.Message</p>
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>