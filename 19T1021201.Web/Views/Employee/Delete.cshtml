@model _19T1021201.DomainModels.Employee
@{
    ViewBag.Title = "Xóa nhân viên";
}
<div class="box box-primary">
    <div class="box-header with-border">
    </div>
    <div class="box-body">

    </div>

    <form class="form-horizontal" action="~/Employee/Delete/@Model.EmployeeID" method="post">

        <div class="form-group">
            <label class="control-label col-sm-2">Họ đệm</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.FirstName</p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Tên</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.LastName</p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Ngày sinh</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.BirthDate</p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Email</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.Email</p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Ghi chú</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.Notes</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-sm-10">

                <img id="Photo" src="~/Images/@Model.Photo" class="img img-bordered" style="width:200px" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                @if (!_19T1021201.BusinessLayers.CommonDataService.InUsedEmployee(Model.EmployeeID))
                {
                    <button type="submit" class="btn btn-danger"> <i class="glyphicon glyphicon-trash"></i> Đồng ý xoá</button>
                }
                else
                {
                    <p class="form-control-static text text-danger">Không thể xoá loại hàng này</p>
                }
                <a class="btn btn-warning" href="~/employee">
                    <i class="fa fa-ban"></i> Bỏ qua
                </a>
            </div>
        </div>
    </form>
    <div class="box-footer text-center">

    </div>
</div>