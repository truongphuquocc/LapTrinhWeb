@model _19T1021201.DomainModels.Employee
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Save" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.HiddenFor(m => m.EmployeeID)
                <label class="control-label col-sm-2">Họ nhân viên:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @autofocus = "autofocus" })


                    @Html.ValidationMessageFor(m => m.LastName, "", new { @style = "color : red" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên nhân viên:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })


                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @style = "color : red" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <input type="text" name="birthday"
                           class="form-control datepicker"
                           value="@string.Format("{0:dd/MM/yyyy}",Model.BirthDate)" />

                    @Html.ValidationMessageFor(m => m.BirthDate, "", new { @class = "text-danger", @style = "color : red" })
                    @Html.HiddenFor(m => m.BirthDate)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ghi chú:</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Notes, new { @class = "form-control" })


                    @Html.ValidationMessageFor(m => m.Notes, "", new { @style = "color : red" })
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })


                    @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color : red" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh cá nhân:</label>
                <div class="col-sm-10">
                    <input id="UploadPhoto" name="uploadPhoto" type="file" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])">
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="Photo" value="@Model.Photo"  />
                    <img id="Photo" src="~/Images/@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary"> <i class="glyphicon glyphicon-floppy-disk"></i> Lưu dữ liệu</button>
                    <a href="~/Employee" class="btn btn-warning">Quay lại</a>
                </div>

            </div>
        </form>
    </div>
</div>

