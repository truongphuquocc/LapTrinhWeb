@model _19T1021201.Web.Models.CategorySearchOutput
@{
    Layout = null;
}

<p>Có <strong>@string.Format("{0:N0}", Model.RowCount)</strong> loại hàng trong tổng số <strong>@String.Format("{0:N0}", Model.PageCount)</strong> trang</p>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr class="bg-primary">
            <th>
                Tên loại hàng
            <th>
                Mô tả
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @item.CategoryName
                </td>
                <td>
                    @item.Description
                </td>

                <td class="text-center">
                    <a href="~/Category/Edit/@item.CategoryID" class="btn btn-info">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                    <a href="~/Category/Delete/@item.CategoryID" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }
    </ul>
</div>

