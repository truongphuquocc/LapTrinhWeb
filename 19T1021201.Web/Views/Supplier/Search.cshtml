@model _19T1021201.Web.Models.SupplierSearchOutput
@{
    Layout = null;
}

<p>Có <strong>@string.Format("{0:N0}", Model.RowCount)</strong> nhà cung cấp trong tổng số <strong>@String.Format("{0:N0}", Model.PageCount)</strong> trang</p>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr class="bg-primary">
            <th>
                Tên nhà cung cấp
            </th>
            <th>
                Tên giao dịch
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Điện thoại

            </th>
            <th>
                Quốc gia

            </th>
            <th>
                Thành phố
            </th>
            <th>
                Mã bưu chính
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @item.SupplierName
                </td>
                <td>
                    @item.ContactName
                </td>
                <td>
                    @item.Address
                </td>
                <td>
                    @item.Phone
                </td>
                <td>
                    @item.Country
                </td>
                <td>
                    @item.City
                </td>
                <td>
                    @item.PostalCode
                </td>
                <td class="text-center" style="width: 90px">
                    <a href="~/Supplier/Edit/@item.SupplierID" class="btn btn-xs btn-info">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                    <a href="~/Supplier/Delete/@item.SupplierID" class="btn btn-xs btn-danger">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }
    </ul>
</div>
