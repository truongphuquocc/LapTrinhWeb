@model IEnumerable<_19T1021201.DomainModels.Customer>
@{
    ViewBag.Title = "Khách hàng";
}

<div class="box box-primary">
    <div class="box-body">

        <form>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search" value="@ViewBag.SearchValue">
                <div class="input-group-btn">
                    <button class="btn btn-success" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
                <div class="input-group-btn">
                    <a href="~/Customer/Create" class="btn btn-primary" style="margin-left: 5px;">
                        <i class="glyphicon glyphicon-plus"></i>
                        bổ sung
                    </a>
                </div>
            </div>

        </form>


        <p>Có <b>@ViewBag.RowCount</b> khách hàng trong tổng số <b>@ViewBag.PageCount</b> trang</p>

        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-primary">
                    <th>
                        Tên khách hàng
                    </th>
                    <th>
                        Tên giao dịch
                    </th>
                    <th>
                        Địa chỉ
                    </th>
                    <th>
                        Thành phố
                    </th>
                    <th>
                        Quốc gia
                    </th>
                    <th>
                        Mã bưu chính
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.CustomerName
                        </td>
                        <td>
                            @item.ContactName
                        </td>
                        <td>
                            @item.Address
                        </td>
                        <td>
                            @item.Country
                        </td>
                        <td>
                            @item.City
                        </td>
                        <td>
                            @item.PostalCode
                        </td>

                        <td class="text-center">
                            <a href="~/Customer/Edit/@item.CustomerID" class="btn btn-info">
                                <i class="glyphicon glyphicon-edit"></i>
                            </a>
                            <a href="~/Customer/Delete/@item.CustomerID" class="btn btn-danger">
                                <i class="glyphicon glyphicon-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-center">
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.PageCount; i++)
                {
                    if (i == ViewBag.Page)
                    {
                        <li class="active"><a href="#">@i</a></li>
                    }
                    else
                    {
                        <li><a href="~/Customer?page=@i&searchvalue=@ViewBag.SearchValue">@i</a></li>
                    }
                }
            </ul>
        </div>
    </div>
</div>



