
@{
    ViewBag.Title = "Khách hàng";
}

<div class="box box-primary">
    <div class="box-body">

        <form>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search">
                <div class="input-group-btn">
                    <button class="btn btn-success" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
                <div class="input-group-btn">
                    <a href="~/Customer/Create" class="btn btn-primary" style="margin-left: 5px;">
                        <i class="glyphicon glyphicon-plus"></i>
                        bổ sung
                    </a>
                </div>
            </div>

        </form>


        <p>Có <b>100</b> khách hàng trong tổng số <b>10</b> trang</p>

        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-primary">
                    <th>
                        Tên khách hàng
                    </th>
                    <th>
                        Tên giao dịch
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Địa chỉ
                    </th>
                    <th>
                        Thành phố
                    </th>
                    <th>
                        Quốc gia
                    </th>
                    <th>
                        Mã bưu chính
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 1; i <= 20; i++)
                {
                    <tr>
                        <td>
                            Trương văn a
                        </td>
                        <td>
                            Mua tv
                        </td>
                        <td>
                            0255588
                        </td>
                        <td>
                            159 Trường Chinh
                        </td>
                        <td>
                            Huế
                        </td>
                        <td>
                            VietNam
                        </td>
                        <td>
                            234
                        </td>
                        <td class="text-center">
                            <a href="~/Customer/Edit" class="btn btn-info">
                                <i class="glyphicon glyphicon-edit"></i>
                            </a>
                            <a href="~/Customer/Delete" class="btn btn-danger">
                                <i class="glyphicon glyphicon-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-center">
            <ul class="pagination">
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            </ul>
        </div>
    </div>
</div>



